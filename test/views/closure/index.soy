{namespace closuretest}

/**
 * Test template
 */
{template .index}
Hello world!
{/template}

/**
 * Long test template
 */
{template .long}
	{@param long: string}
	{$long}
{/template}

/**
 * List test template
 * 
 */
{template .list}
	{@param name: string}
	{@param list: list<any>}
	{$name}:{sp}
	{for $item in $list}
		{$item}{if not isLast($item)},{sp}{/if}
	{/for}
{/template}

/**
 * List in list test template
 * 
 */
{template .listInList}
	{@param name: string}
	{@param list: list<list<any>>}
	{for $item in $list}
		{call .list}
			{param name: $name/}
			{param list: $item/}
		{/call}
	{/for}
{/template}

/**
 * List in map test template
 * 
 */
{template .listInMap}
	{@param name: string}
	{@param map: [items: list<any>]}
	{$name}:{sp}
	{for $item in $map.items}
		{$item}{if not isLast($item)},{sp}{/if}
	{/for}
{/template}

/**
 * List test template
 * 
 */
{template .soylist}
	{@param name: string}
	{@param soylist: list<any>}
	{$name}:{sp}
	{for $item in $soylist}
		{$item}{if not isLast($item)},{sp}{/if}
	{/for}
{/template}

/**
 * locale test
 */
{template .locale}
	{msg desc="Form Button - Submit"}Submit{/msg}
{/template}

/**
 * Option test
 *
 */
{template .option}
	{@param value: ?}
	{$value ? $value : 'None'}
{/template}

/**
 * Boolean test
 */
{template .bool}
	{@param true: bool}
	{@param nottrue: bool}
	{if $true}true {/if}
	{if not $nottrue}false{/if}
{/template}

/**
 * Inject test
 */
{template .inject}
{@inject foo: any}
{$foo}
{/template}
